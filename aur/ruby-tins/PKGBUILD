gem=tins
pkgname=ruby-$gem
pkgver=1.8.2
pkgrel=2
pkgdesc='Misc tools used by amatch library'
arch=(any)
url='http://github.com/flori/tins'
license=(MIT)
depends=(ruby=2.5.0)
options=(!emptydirs)
source=(https://rubygems.org/downloads/$gem-$pkgver.gem)
noextract=($gem-$pkgver.gem)
sha256sums=('f3964e4bf0c9b795834c76faa90918e8848806bedfd9a954c73f742874a11156')

package() {
  msg "Packaging $pkgname"
  gem_install_path="$(ruby -e'puts Gem.default_dir')"
  msg2 $gem_install_path
  gem install --ignore-dependencies --no-user-install -i "$pkgdir/$gem_install_path" -n "$pkgdir/usr/bin" $gem-$pkgver.gem
  rm "$pkgdir/$gem_install_path/cache/$gem-$pkgver.gem"
  install -D -m644 "$pkgdir/$gem_install_path/gems/$gem-$pkgver/COPYING" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  msg "Packaging $pkgname"
}

