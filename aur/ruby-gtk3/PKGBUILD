gem=gtk3
pkgname=ruby-$gem
pkgver=3.2.1
pkgrel=1
pkgdesc='Ruby/GTK3 is a Ruby binding of GTK+-3.x.'
arch=(any)
url='http://ruby-gnome2.sourceforge.jp/'
license=(LGPL2.1)
depends=(ruby=2.5.0 ruby-atk=$pkgver ruby-gdk3=$pkgver ruby-gdk_pixbuf2=$pkgver ruby-gio2=$pkgver
    ruby-glib2=$pkgver ruby-pango=$pkgver gtk3)
makedepends=(gobject-introspection)
options=(!emptydirs)
source=(https://rubygems.org/downloads/$gem-$pkgver.gem)
noextract=($gem-$pkgver.gem)
sha256sums=('c6c3327b5a42ec407dbde7ec456e09aed171b64b2b50d860d1fb460ad0afaa59')

package() {
  msg "Packaging $pkgname"
  gem_install_path="$(ruby -e'puts Gem.default_dir')"
  msg2 $gem_install_path
  gem install --ignore-dependencies --no-user-install -i "$pkgdir/$gem_install_path" -n "$pkgdir/usr/bin" $gem-$pkgver.gem
  rm "$pkgdir/$gem_install_path/cache/$gem-$pkgver.gem"
}
