gem=gdk3
pkgname=ruby-$gem
pkgver=3.2.1
pkgrel=1
pkgdesc='Ruby/GDK3 is a Ruby binding of GDK-3.x.'
arch=(any)
url='http://ruby-gnome2.sourceforge.jp/'
license=(LGPL2.1)
depends=(ruby=2.5.0 ruby-cairo-gobject=$pkgver ruby-gdk_pixbuf2=$pkgver ruby-gobject-introspection=$pkgver ruby-pango=$pkgver)
makedepends=(ruby-native-package-installer)
options=(!emptydirs)
source=(https://rubygems.org/downloads/$gem-$pkgver.gem)
noextract=($gem-$pkgver.gem)
sha256sums=('102c07b1c2954af0f41299d6baf4d2a3143df3f1a7fa7d2aa00af19a8ff8cfb8')

package() {
  msg "Packaging $pkgname"
  gem_install_path="$(ruby -e'puts Gem.default_dir')"
  msg2 $gem_install_path
  gem install --ignore-dependencies --no-user-install -i "$pkgdir/$gem_install_path" -n "$pkgdir/usr/bin" $gem-$pkgver.gem
  rm "$pkgdir/$gem_install_path/cache/$gem-$pkgver.gem"
}
