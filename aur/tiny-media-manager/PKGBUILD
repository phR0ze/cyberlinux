pkgname=tiny-media-manager
pkgver=2.9.7
pkgrel=2
pkgdesc="A multi-OS media managment tool"
arch=('any')
url="http://www.tinymediamanager.org"
license=('Apache-2.0')
depends=(libmediainfo 'java-environment>=8')
makedepends=(maven imagemagick)
install=$pkgname.install
_gitname="tinyMediaManager"

source=("https://github.com/tinyMediaManager/tinyMediaManager/archive/$_gitname-$pkgver.tar.gz"
  "$pkgname"
  "$pkgname.desktop")

sha256sums=('dc4832fabb10fcde753b6a6325786c6f54939a2a5eb2550828ac19ff3019b0ec'
  '24b5c4dac6c12be7d1ca54fa712bd56bac1a4098d62f2155253a2a6b05e96786'
  '7c60b8c4b7ac62eaf192f797110155c6ea552348cf5f11d3bc6dc6ef8ea70dd5')

build()
{
  msg "Building $pkgname..."
	cd $srcdir/$_gitname-$_gitname-$pkgver

  msg2 "Building using maven"
	mvn package

  msg2 "Generating installable low resolution icon"
  convert AppBundler/tmm.png $srcdir/$pkgname.png
}

package()
{
  msg "Packaging $pkgname..."
	cd $srcdir/$_gitname-$_gitname-$pkgver/dist

	msg2 "Extract maven built package"
	tar -xf tmm_$pkgver_*_linux.tar.gz

	msg2 "Remove uneeded files"
  rm -rf tmm_$pkgver_*

	msg2 "Install package directories"
  find . -type d -exec install -dm755 $pkgdir/usr/share/$pkgname/{} \;

	msg2 "Install package files"
  find . -type f -exec install -Dm644 {} $pkgdir/usr/share/$pkgname/{} \;

	msg2 "Install app icons"
  install -Dm644 $srcdir/$pkgname.png -t $pkgdir/usr/share/icons/hicolor/32x32/apps
  install -Dm644 $srcdir/$_gitname-$_gitname-$pkgver/AppBundler/tmm.png $pkgdir/usr/share/icons/hicolor/128x128/apps/$pkgname.png

	msg2 "Install desktop launcher"
  install -Dm644 $srcdir/$pkgname.desktop -t $pkgdir/usr/share/applications

	msg2 "Install launcher"
	install -Dm755 $srcdir/$pkgname -t $pkgdir/usr/bin
}

# vim: ts=2:sw=2:sts=2
