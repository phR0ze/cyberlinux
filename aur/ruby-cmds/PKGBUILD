gem=cmds
pkgname=ruby-$gem
pkgver=0.0.1
pkgrel=1
pkgdesc='Command like syntax for Ruby command line parameters'
arch=(any)
url='https://github.com/phR0ze/cmds'
license=(MIT)
depends=('ruby>=2.4.0')
options=(!emptydirs)
source=("git+https://github.com/phR0ze/$gem.git#tag=$pkgver")
sha1sums=('SKIP')

build()
{
  cd $srcdir/$gem

  msg "Building $pkgname"
  gem build $gem.gemspec
}

package()
{
  cd $srcdir/$gem

  msg "Packaging $pkgname"
  gem_install_path="$(ruby -e'puts Gem.default_dir')"
  msg2 $gem_install_path
  gem install --ignore-dependencies --no-user-install -i "$pkgdir/$gem_install_path" -n "$pkgdir/usr/bin" "$gem-$pkgver.gem"
  rm "$pkgdir/$gem_install_path/cache/$gem-$pkgver.gem"
}

